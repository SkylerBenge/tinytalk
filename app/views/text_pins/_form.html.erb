<%= simple_form_for([@board,@text_pin]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.hidden_field :board_id, value: @board.id %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
